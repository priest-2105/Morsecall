<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fake_call_background"
    android:gravity="center"
    android:padding="32dp"
    android:fitsSystemWindows="true">

    <!-- Caller Avatar -->
    <ImageView
        android:id="@+id/caller_avatar"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_caller_avatar"
        android:background="@drawable/caller_avatar_background"
        android:scaleType="centerCrop" />

    <!-- Caller Name -->
    <TextView
        android:id="@+id/caller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="John Doe"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center" />

    <!-- Call Status -->
    <TextView
        android:id="@+id/call_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Incoming call"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:alpha="0.9" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp">

        <!-- Decline Button -->
        <Button
            android:id="@+id/decline_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/decline_button_background"
            android:text="✕"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:elevation="8dp" />

        <!-- Accept Button -->
        <Button
            android:id="@+id/accept_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/accept_button_background"
            android:text="✓"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:elevation="8dp" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap anywhere to dismiss"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        android:gravity="center" />

</LinearLayout>
